@section('content')
  <div class="container">
    <h1 class="mb-4 mt-4 text-center">AdonisJS Todo App</h1>
    <div class="row">
      <div class="col-sm-6 offset-sm-3 mb-5">

        @if(flashMessage('successMessage'))
          <div class="alert alert-success mb-4">{{ flashMessage('successMessage') }}</div>
        @endif

        @if(hasErrorFor('addTodo'))
          <div class="alert alert-danger mb-4">{{ getErrorFor('addTodo') }}</div>
        @endif

      <form action="{{ route('todos.store') }}" method="POST" class="mb-5">
        {{ csrfField() }}
        <div class="d-flex">
          <input type="text" name="addTodo" class="form-control form-control-lg" id="addTodo" placeholder="What needs to be done?" value="{{ old('addTodo') }}">
          <button class="btn btn-primary col-3" type="submit">Add Todo</button>
        </div>
      </form>
      <ul class="list-group">

       @each(todo in todos) 
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
          <a href="{{ route('todo.edit', { id: todo.id })}}" class="{{todo.completed ? 'completed' : ''}}">{{ todo.title }}</a>
          </div>
          <div>
          <form action="{{ route('todo.delete', {id: todo.id }) + '?_method=DELETE' }}"  method="POST">
              {{ csrfField() }}
              <button class="btn btn-sm btn-danger">&times;</button>
            </form>
          </div>
        </li>
       @endeach
       
      </ul>
      </div>
    </div>
  </div>
